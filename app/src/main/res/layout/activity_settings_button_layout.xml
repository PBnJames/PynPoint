<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/twitchPurple">

    <ListView android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <Button
        android:id="@+id/to_timer_button_settings"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/to_timer_button_label"
        android:textSize="@dimen/tiny_text_size"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="731dp"/>

    <Button
        android:id="@+id/to_settings_button_settings"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/to_settings_button_label"
        android:textSize="@dimen/tiny_text_size"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/to_timer_button_settings"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/to_timer_button_settings"
        android:layout_toRightOf="@+id/to_timer_button_settings" />

    <Button
        android:id="@+id/to_history_button_settings"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/to_history_button_label"
        android:textSize="@dimen/tiny_text_size"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/to_timer_button_settings"
        android:layout_toEndOf="@+id/to_settings_button_settings"
        android:layout_toRightOf="@+id/to_settings_button_settings"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

    <Button
        android:id="@+id/to_profile_button_settings"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/to_profile_button_label"
        android:textSize="@dimen/tiny_text_size"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/to_timer_button_settings"
        android:layout_toEndOf="@+id/to_history_button_settings"
        android:layout_toRightOf="@+id/to_history_button_settings"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />

</RelativeLayout>