        </TableRow>
        <TableRow
            android:id="@+id/table_row5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/row_5_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="@string/default_date"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite" />
            <TextView
                android:id="@+id/row_5_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="@string/default_length"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite" />
            <TextView
                android:id="@+id/row_5_percent_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="@string/default_percent_complete"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite" />
            <TextView
                android:id="@+id/row_5_points"
                android:layout_width="wrap_content"
