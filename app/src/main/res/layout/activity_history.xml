<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/twitchPurple">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/antiFlashWhite"
            android:text="@string/history_title"
            android:layout_marginBottom="60dp"/>
    </RelativeLayout>

    <TableLayout
        android:id="@+id/history_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TableRow
            android:id="@+id/table_row0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/row0_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="@string/history_date_label"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite"
                android:gravity="center"/>
            <TextView
                android:id="@+id/row0_length_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="@string/history_length_label"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite"
                android:gravity="center"/>
            <TextView
                android:id="@+id/row0_percent_complete_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="@string/history_percentage_label"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite"
                android:gravity="center"/>
            <TextView
                android:id="@+id/row0_points_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="@string/history_points_label"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:id="@+id/table_row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/row_1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="@string/default_date"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite" />
            <TextView
                android:id="@+id/row_1_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="@string/default_length"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite" />
            <TextView
                android:id="@+id/row_1_percent_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="@string/default_percent_complete"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite" />
            <TextView
                android:id="@+id/row_1_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:text="@string/default_points"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite" />
        </TableRow>
        <TableRow
            android:id="@+id/table_row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/row_2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
