                android:padding="5dp"
                android:text="@string/default_points"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/antiFlashWhite" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/to_timer_button_history"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="@string/to_timer_button_label"
            android:textSize="@dimen/tiny_text_size"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/to_settings_button_history"
            android:text="@string/to_settings_button_label"
            android:textSize="@dimen/tiny_text_size"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/to_timer_button_history"
            android:layout_toEndOf="@+id/to_timer_button_history"
            android:layout_toRightOf="@+id/to_timer_button_history"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/to_history_button_history"
            android:text="@string/to_history_button_label"
            android:textSize="@dimen/tiny_text_size"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/to_timer_button_history"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/to_profile_button_history"
            android:layout_toStartOf="@id/to_profile_button_history"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/to_profile_button_history"
            android:text="@string/to_profile_button_label"
            android:textSize="@dimen/tiny_text_size"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/to_timer_button_history"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
</LinearLayout>