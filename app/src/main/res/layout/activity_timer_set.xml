<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.pynpoint.TimerSetActivity"
    android:background="@color/calmGreen">


    <TextView
        android:id="@+id/timer_minute_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_x="11dp"
        android:layout_y="244dp"
        android:text="@string/minutes_label"
        android:textColor="@color/antiFlashWhite"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/timer_minute_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_x="118dp"
        android:layout_y="244dp"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/timer_hour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="14dp"
        android:layout_x="31dp"
        android:layout_y="207dp"
        android:text="@string/hour_label"
        android:textColor="@color/antiFlashWhite"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/timer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="29dp"
        android:layout_x="88dp"
        android:layout_y="166dp"
        android:text="@string/timer_title"
        android:textColor="@color/antiFlashWhite"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/interval_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_x="202dp"
        android:layout_y="301dp"
        android:text="@string/interval_title"
        android:textColor="@color/antiFlashWhite"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/interval_hour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_x="145dp"
        android:layout_y="347dp"
        android:text="@string/hour_label"
        android:textColor="@color/antiFlashWhite"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/interval_minute_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_x="132dp"
        android:layout_y="392dp"
        android:text="@string/minutes_label"
        android:textColor="@color/antiFlashWhite"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/interval_hour_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_x="239dp"
        android:layout_y="349dp"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/interval_minute_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_x="237dp"
        android:layout_y="395dp"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/timer_hour_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_x="119dp"
        android:layout_y="207dp"
        android:spinnerMode="dialog" />

    <Button
        android:id="@+id/start_timer_button"
        android:layout_width="150dp"
        android:layout_height="100dp"

        android:layout_marginTop="127dp"
        android:layout_x="171dp"
        android:layout_y="543dp"
        android:text="@string/start_button"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/break_minute_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="234dp"
        android:layout_y="248dp"
        android:text="@string/minutes_label"
        android:textColor="@color/antiFlashWhite"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/break_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="291dp"
        android:layout_y="174dp"
        android:text="@string/break_title"
        android:textColor="@color/antiFlashWhite"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/break_hour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_x="250dp"
        android:layout_y="215dp"
        android:text="@string/hour_label"
        android:textColor="@color/antiFlashWhite"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/break_hour_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_x="335dp"
        android:layout_y="215dp"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/break_minute_spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_x="335dp"
        android:layout_y="252dp"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/study_pattern_spinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_x="64dp"
        android:layout_y="112dp"
        android:entries="@array/study_pattern_list"
        android:prompt="@string/study_pattern_prompt"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/study_pattern_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_x="148dp"
        android:layout_y="72dp"
        android:text="@string/study_pattern_title"
        android:textColor="@color/antiFlashWhite"
        android:textSize="22sp" />

</AbsoluteLayout>
