<resources>

    <!-- Purple base activity theme -->
    <style name="ActivityTheme.Primary.Base.Purple" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryTextColor">@color/black</item>
        <item name="secondaryTextColor">@color/antiFlashWhite</item>
        <item name="android:windowBackground">@color/twitchPurple</item>
        <item name="android:buttonStyle">@style/defaultButton</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>
    <!-- Green base activity theme -->
    <style name="ActivityTheme.Primary.Base.Green" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryTextColor">@color/black</item>
        <item name="secondaryTextColor">@color/antiFlashWhite</item>
        <item name="android:windowBackground">@color/uglyGreen</item>
        <item name="android:buttonStyle">@style/defaultButton</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="defaultButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/antiFlashWhite</item>
    </style>


